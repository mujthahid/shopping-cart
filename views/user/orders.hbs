<script>
  for (i = 0; i >= 0; i++) {
    document.getElementsByClassName('cancelledcancelButton')[i].style.display = 'none'
  }
</script>


<script>
  function completeOrder(orderId) {
    $.ajax({
      url: '/complete-order',
      method: 'post',
      data: { orderId },
      success: (response) => {
        razorpayPayment(response)
      }
    })
  }
</script>
<script>
  function cancelOrder(orderId) {
if(confirm("Are you sure to cancel the current order?")){
    $.ajax({
      url: '/cancel-order',
      method: 'post',
      data: {orderId},
      success:(response)=>{
        if(response.cancel){
 document.getElementById(orderId).innerHTML="cancelled"
        }
      
        }
    })
}
  }
</script>

<script>
  $(document).ready(function () {
    $('#Orders').DataTable();
  });
</script>

<script>
  for (i = 1; i >= 1; i++) {
    document.getElementsByClassName('i')[i - 1].innerHTML = i
  }
</script>

