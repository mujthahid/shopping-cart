 <section style="margin-top: 7rem;" class="mb-5">
        <div class="container mt-4">
            <div class="row  ">
                 {{#each products}}
                <div class="col-6 col-md-4 col-lg-3 ">
                   
                    <div  class="card mt-2 mb-2 productCard " >
                        <img class="card-img-top" 
                            src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title text-truncate name">{{this.Name}}</h5>
                            <h6 class="card-title">â‚¹{{this.Price}}</h6>
                            <p class="card-text text-truncate description">{{this.Description}}</p>
                           <div class="row">
    <button  onclick="addToCart('{{this._id}}')" class="btn btn-success btn-sm ml-2 cart">Add to cart</button>
                            <a href="/buy-now/{{this._id}}" class="btn btn-danger btn-sm ml-2 buy">Buy Now</a>
                           </div>
                            
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

