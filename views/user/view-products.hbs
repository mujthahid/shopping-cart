 <section>
        <div class="container mt-4">
            <div class="row">
                 {{#each products}}
                <div class=" col-md-3">
                   
                    <div class="card mt-2 mb-2 " style="width: 100%; ">
                        <img class="card-img-top" 
                            src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title text-truncate">{{this.Name}}</h5>
                            <h6 class="card-title">â‚¹{{this.Price}}</h6>
                            <p class="card-text text-truncate">{{this.Description}}</p>
                           
                            <button  onclick="addToCart('{{this._id}}')" class="btn btn-success">Add to cart</button>
                            <a href="/buy-now/{{this._id}}" class="btn btn-danger ">Buy Now</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

