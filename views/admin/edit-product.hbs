{{!-- edit product page created --}}

<section>
    <div class="container">
<form action="/admin/edit-product/{{product._id}}" enctype="multipart/form-data" method="post">
  <div style="text-align: center;" class="mt-4"><h1>Edit Product</h1></div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Name</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="Name" value="{{product.Name}}" placeholder="Name of the Product">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Price</label>
    <input type="number" class="form-control" id="exampleFormControlInput1" name="Price" value="{{product.Price}}" placeholder="Price of the Product">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Category</label>
    <select class="form-control" name="Category"  id="exampleFormControlSelect1">
      <option value="{{product.Category}}">{{product.Category}}</option>
      <option value="Smartphone">Smartphone</option>
      <option value="Laptops">Laptops</option>
      <option value="Smartphone Acessories">Smartphone Accessories</option>
      <option value="Laptop Accessories">Laptop Accessories</option>
      <option value="Others">Others</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <input type="text" class="form-control" name="Description" value="{{product.Description}}" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="exampleFormControlFile1">Image</label>
    <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px;height: auto;" id="imgView">
    <input type="file" name="Image" class="form-control" id="exampleFormControlFile1" onchange="viewImage(event)"> 
  </div>
<button style="width: 90px;" type="submit" class="btn btn-success mb-4">Submit</button>
</form>
 </div>
 </section>

 <script>
function viewImage(event){
  document.getElementById("imgView").src=URL.createObjectURL(event.target.files[0])
}

 </script>