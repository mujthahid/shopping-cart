
<section>
    <div class="container">
        <div class="row mt-4">
    <a href="/admin/add-product" class="btn btn-success ml-auto ">Add Product</a>
</div>
        <table class="table table-dark mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
       
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>â‚¹{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img style="height: 50px; width: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
     <td><a class="btn btn-success" href="/admin/edit-product">Edit</a></td>
     {{!-- on clicking the delete button id is passed and awaiting response --}}
     <td><a class="btn btn-danger" onclick="return confirm ('Are you sure to delete {{this.Name}} ?')" href="/admin/delete-product/{{this._id}}">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>