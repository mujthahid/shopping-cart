{{!-- assigning add product form --}}
<section>
    <div class="container">
<form action="/admin/add-product" enctype="multipart/form-data" method="post">
  <div style="text-align: center;" class="mt-4"><h1>Add Product</h1></div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Name</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="Name" placeholder="Name of the Product">
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">Price</label>
    <input type="number" class="form-control" id="exampleFormControlInput1" name="Price" placeholder="Price of the Product">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Category</label>
    <select class="form-control" name="Category" id="exampleFormControlSelect1">
      <option value="Smartphone">Smartphone</option>
      <option value="Laptops">Laptops</option>
      <option value="Smartphone Acessories">Smartphone Accessories</option>
      <option value="Laptop Accessories">Laptop Accessories</option>
      <option value="Others">Others</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea class="form-control" name="Description"  id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="exampleFormControlFile1">Image</label>
    <input type="file" name="Image" class="form-control-file" id="exampleFormControlFile1">
  </div>
<button style="width: 90px;" type="submit" class="btn btn-success">Submit</button>
</form>
 </div>
 </section>